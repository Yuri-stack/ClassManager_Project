{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <a href="/students/create">Novo Estudante</a>
        
        <table width=100%>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}

                <tr>
                    <td>
                        <span style = "background-image: url({{ student.avatar_url }})"></span>
