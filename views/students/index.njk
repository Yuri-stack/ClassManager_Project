                    </td>
                    <td>
                        {{ student.acting }}
                    </td>
                    <td>
                    {# <span><a href="/students/{{ student.id }}">Ver</a></span>
                    <span><a href="/students/{{ student.id }}">Ver</a></span> #}

                    {# <div>
                        <a href="/students/{{ student.id }}">Ver</a>
                    </div>
                    <div>
                        <a href="/students/{{ student.id }}">Ver</a>
                    </div> #}

                    <a href="/students/{{ student.id }}">Ver</a>

                    <a href="/students/{{ student.id }}/edit">Editar</a>
                        
                    </td>
                </tr>

                {% endfor %}
            </tbody>

        </table>

    </div>

{% endblock content %}