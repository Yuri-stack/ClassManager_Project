{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section class="avatar" 
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover; ">
        </section>

        <section class="details">

            <form id="form-save" method="post" action="/teachers?_method=PUT">

                <h3>Editar Professor</h3>

                <input type="hidden" name="id" value="{{ teacher.id }}">

                {% include 'teachers/fields.njk' %}

            </form>

            <form id="form-delete" action="/teachers?_method=DELETE" method="post">

                <input type="hidden" name="id" value="{{ teacher.id }}">
                
            </form>

                <button class="btn-delete" type="submit" form="form-delete">Apagar</button>
                <button class="btn-salve" type="submit" form="form-save">Salvar</button>

        </section>

    </div>

{% endblock content %}