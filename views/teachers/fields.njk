            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}" required>
                </div>
            </div>

            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Professor" value="{{ teacher.name }}" required>
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth" value="{{ teacher.birth }}" required>
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    {# <select name="schooling" required>
                        <option value="">Escolha o Grau de Escolaridade</option>
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select> #}

                    <select name="schooling" required>

                        <option value="" {% if teacher.schooling == "" %} selected {% endif%}>
                            Escolha o Grau de Escolaridade
                        </option>

                        <option value="medio" {% if teacher.schooling == "Ensino Médio Completo" %} selected {% endif%}>
                            Ensino Médio Completo
                        </option>                       

                        <option value="superior" {% if teacher.schooling == "Ensino Superior Completo" %} selected {% endif%}>
                            Ensino Superior Completo
                        </option>

                        <option value="mestre" {% if teacher.schooling == "Mestrado" %} selected {% endif%}>
                            Mestrado
                        </option>

                        <option value="doutor" {% if teacher.schooling == "Doutorado" %} selected {% endif%}>
                            Doutorado
                        </option>

                    </select>

                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <input type="radio" id="presencial" name="type_class" value="Presencial" checked
                        {% if teacher.type_class == "Presencial" %}
                            checked
                        {% endif %}
                    >
                    <label for="presencial">Presencial</label>

                    <input type="radio" id="distancia" name="type_class" value="À distância"
                        {% if teacher.type_class == "À distância" %}
                            checked
                        {% endif %}
                    >
                    <label for="distancia">À distância</label>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="acting"  value="{{ teacher.acting }}" placeholder="Digite as áreas separadas por vírgula" required>
                </div>
            </div>
            