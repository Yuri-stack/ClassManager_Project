{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="post" action="/teachers">
        <section class="avatar"></section>
        <section class="details">

            <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://" value="" required>
                </div>
            </div>

            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Professor" value="" required>
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth" value="" required>
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="schooling" required>
                        <option value="">Escolha o Grau de Escolaridade</option>
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <input type="radio" id="presencial" name="type_class" value="Presencial" checked>
                    <label for="presencial">Presencial</label>

                    <input type="radio" id="distancia" name="type_class" value="À distância">
                    <label for="distancia">À distância</label>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="acting" placeholder="Digite as áreas separadas por vírgula" required>
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}