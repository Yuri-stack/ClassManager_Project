            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}" required>
                </div>
            </div>

            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Professor" value="{{ teacher.name }}" required>
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth" value="{{ teacher.birth }}" required>
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>

                    <select name="education_level" required>

                        <option value="" {% if teacher.education_level == "" %} selected {% endif%}>
                            Escolha o Grau de Escolaridade
                        </option>

                        <option value="medio" {% if teacher.education_level == "Ensino Médio Completo" %} selected {% endif%}>
                            Ensino Médio Completo
                        </option>                       

                        <option value="superior" {% if teacher.education_level == "Ensino Superior Completo" %} selected {% endif%}>
                            Ensino Superior Completo
                        </option>

                        <option value="mestre" {% if teacher.education_level == "Mestrado" %} selected {% endif%}>
                            Mestrado
                        </option>

                        <option value="doutor" {% if teacher.education_level == "Doutorado" %} selected {% endif%}>
                            Doutorado
                        </option>

                    </select>

                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <input type="radio" id="presencial" name="class_type" value="Presencial" checked
                        {% if teacher.class_type == "Presencial" %}
                            checked
                        {% endif %}
                    >
                    <label for="presencial">Presencial</label>

                    <input type="radio" id="distancia" name="class_type" value="À distância"
                        {% if teacher.class_type == "À distância" %}
                            checked
                        {% endif %}
                    >
                    <label for="distancia">À distância</label>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="subjects_taught"  value="{{ teacher.subjects_taught }}" placeholder="Digite as áreas separadas por vírgula" required>
                </div>
            </div>
            