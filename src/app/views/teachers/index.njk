{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        
        <a href="/teachers/create">Novo Professor</a>

        <table width=100%>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}

                <tr>
                    <td>
                        <span style = "background-image: url({{ teacher.avatar_url }})"></span>
                        {{ teacher.name }}
                    </td>
                    <td>
                        {{ teacher.subjects_taught }}
                    </td>
                    <td>
                    
                    <a href="/teachers/{{ teacher.id }}">Ver</a>

                    <a href="/teachers/{{ teacher.id }}/edit">Editar</a>
                        
                    </td>
                </tr>

                {% endfor %}
            </tbody>

        </table>

    </div>

{% endblock content %}